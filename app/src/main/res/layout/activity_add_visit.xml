
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textCounty"
        android:layout_marginTop="30dp"
        android:text="Zemlja" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:id="@+id/in_country"
        android:layout_below="@id/textCounty"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textEntryDate"
        android:layout_marginTop="30dp"
        android:text="Datum ulaska"
        android:layout_below="@id/in_country" />

    <EditText
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:id="@+id/in_entry"
        android:layout_marginTop="132dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/textEntryDate"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELECT DATE"
        android:id="@+id/btn_entry"
        android:layout_alignBottom="@+id/in_entry"
        android:layout_toRightOf="@+id/in_entry"
        android:layout_toEndOf="@+id/in_entry" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textExitDate"
        android:layout_marginTop="30dp"
        android:text="Datum izlaska"
        android:layout_below="@id/in_entry" />

    <EditText
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:id="@+id/in_exit"
        android:layout_below="@+id/textExitDate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELECT DATE"
        android:id="@+id/btn_exit"
        android:layout_below="@+id/textExitDate"
        android:layout_alignLeft="@+id/btn_entry"
        android:layout_alignStart="@+id/btn_entry" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textDesc"
        android:layout_marginTop="30dp"
        android:text="Opis posete"
        android:layout_below="@id/btn_exit" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:id="@+id/in_desc"
        android:layout_below="@+id/textDesc"
        android:layout_alignParentLeft="true"
         />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SAVE"
            android:id="@+id/btn_save"
            android:layout_below="@+id/in_desc"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    </ScrollView>


</RelativeLayout>
